<header class="header">
  <!-- Top Bar-->
  <!-- Top Bar End-->
  <!-- Navbar-->
  <nav
    class="navbar navbar-expand-lg navbar-sticky navbar-airy navbar-light bg-trasperant bg-fixed-white"
  >
    <div class="container-fluid">
      <!-- Navbar Header  -->
      <a class="navbar-brand" href="/">
        <img class="logo" src="/img/E-Shopee_logo.png" alt="" />
      </a>
      <button
        class="navbar-toggler navbar-toggler-right align-items-center"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="bi bi-list h3"></i>
      </button>
      <!-- Navbar Collapse -->
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-2">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shop">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
        <div
          class="d-flex align-items-center justify-content-between justify-content-lg-end mt-1 mb-2 my-lg-0 ms-auto"
        >
          <!-- Search Button-->
          <div class="nav-item navbar-icon-link" data-bs-toggle="search">
            <i class="bi bi-search"></i>
          </div>
          <!-- User Not Logged - link to login page-->
          <% if (typeof user !=='undefined') { %> <% if (user) { %>
          <div class="nav-item navbar-icon-link">
            <a href="/user/profile" class="navbar-icon-link">
              <button class="btn btn-outline-success">My Account</button>

              <span
                class="text-sm ms-2 ms-lg-0 text-uppercase text-sm fw-bold d-none d-sm-inline d-lg-none"
              >
                Account
              </span>
            </a>
          </div>
          <% } %> <% } else { %>
          <div class="nav-item navbar-icon-link m-0">
            <a href="/login" class="navbar-icon-link">
              <button class="btn btn-outline-success">Log in</button>
              <span
                class="text-sm ms-2 ms-lg-0 text-uppercase text-sm fw-bold d-none d-sm-inline d-lg-none"
                >Log in
              </span>
            </a>
          </div>
          <% } %> <% if (typeof user !=='undefined') { %> <% if (user) { %>
          <div class="nav-item navbar-icon-link m-0">
            <a href="/user/cart" class="navbar-icon-link nav-link">
              <i class="bi bi-cart3 text-warning"></i> Cart <% if (typeof
              cartCount !== 'undefined') { %>
              <div id="cartCount" class="navbar-icon-link-badge">
                <%- cartCount ? cartCount : '0' %>
              </div>
              <% } %>
              <span
                class="text-sm ms-2 ms-lg-0 text-uppercase text-sm fw-bold d-none d-sm-inline d-lg-none"
                >View Cart
              </span>
            </a>
          </div>

          <div class="nav-item navbar-icon-link m-0">
            <button
              onclick="logOut()"
              class="btn btn-outline-light navbar-icon-link text-danger px-2 py-1 align-items-center"
            >
              <i class="bi bi-box-arrow-right align-items-center"></i>
              <span
                class="text-sm ms-2 ms-lg-0 text-uppercase text-sm fw-bold d-none d-sm-inline d-lg-none"
              >
                Sign Out
              </span>
            </button>
          </div>
          <% } %> <% } %>
        </div>
      </div>
    </div>
  </nav>
  <!-- /Navbar -->
  <!-- Fullscreen search area-->
  <div class="search-area-wrapper">
    <div class="search-area d-flex align-items-center justify-content-center">
      <div class="close-btn">
        <i class="bi bi-x-circle h3"></i>
      </div>
      <form
        id="search-bar"
        class="search-area-form"
        action="/shop/"
        method="GET"
      >
        <div class="mb-4 position-relative">
          <input
            class="search-area-input"
            type="search"
            name="search"
            id="search"
            placeholder="What are you looking for?"
          />
          <button class="search-area-button" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
  <!-- /Fullscreen search area-->
</header>

<script defer>
  //  Log out confirmation
  const logOut = () => {
    Swal.fire({
      title: "Are you sure you want to logout?",
      text: "You will be logged out!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, Logout!",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/logout";
      }
    });
  };
</script>
